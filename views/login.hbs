<div class="row justify-content-center mb-5">
    <div class="card col-md-5">
        <div class="card-header text-center">
            <h3>登入</h3>
        </div>
        <div class="card-body">
            {{> message}}
            <div class="text-right">
                <small class="text-danger">* 為必填欄位</small>
            </div>
            <form action="/users/login" method="POST" class="needs-validation" novalidate>
                <div class="form-group">
                    <label for="email">電子信箱<span class="text-danger">*</span></label>
                    <input class="form-control custom-input" type="email" id="email" name="email" placeholder="請輸入電子郵件地址">
                </div>
                <div class="form-group">
                    <label for="email">姓名<span class="text-danger">*</span></label>
                    <input class="form-control custom-input" type="text" id="name" name="name" placeholder="請輸入姓名">
                </div>
                <div class="mt-2 mt-md-3">
                    <button class="btn btn-major btn-block btn-sm" type="submit">登入</button>
                    <a href="/" class="btn btn-primary btn-block btn-sm">使用Facebook 登入</a>
                </div>
            </form>
        </div>
    </div>
</div>
