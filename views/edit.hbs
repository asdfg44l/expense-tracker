{{>message}}
<form action="/records/{{record._id}}?_method=PUT" method="POST" class="needs-validation" novalidate>
  <div class="container container-narrow">
    <div class="row mt-3">
      <div class="col-4">*必填欄位</div>
      <div class="col-8 font-size-larger">請修改你的支出</div>
    </div>

    <div class="row mt-3 font-size-larger">
      <span class="col-4">名稱*：</span>
      <div class="col-8">
        <input class="form-control font-size-large" name="name" type="text" placeholder="早餐" value="{{record.name}}"
          required>
        <div class="invalid-feedback">
          請輸入支出名稱
        </div>
      </div>
    </div>

    <div class="row mt-3 font-size-larger">
      <div class="col-4">日期*：</div>
      <div class="col-8">
        <input class="form-control  font-size-large" name="date" type="date" value="{{record.date}}" required>
        <div class="invalid-feedback">
          請輸入日期
        </div>
      </div>
    </div>

    <div class="row mt-3 font-size-larger">
      <div class="col-4">類別*：</div>
      <div class="col-8">
        <select class="form-select  font-size-large" name="category" aria-label="select category"
          data-selected="{{record.category}}" id="categoryRecord" required>
          {{#each categories}}
          <option value="{{this.name}}">{{this.name}}</option>
          {{/each}}
        </select>
        <div class="invalid-feedback">
          請輸入類別
        </div>
      </div>
    </div>

    <div class="row mt-3 font-size-larger">
      <span class="col-4">商家：</span>
      <div class="col-8">
        <input class="form-control font-size-large" name="merchant" type="text" placeholder="巷口早餐店"
          value="{{record.merchant}}">
      </div>
    </div>

    <div class="row mt-3 font-size-larger">
      <div class="col-4">金額*：</div>
      <div class="col-8">
        <input class="form-select  font-size-large" name="amount" placeholder="50" type="number" setp="1" min="0"
          value="{{record.amount}}" required>
        <div class="invalid-feedback">
          請輸入金額
        </div>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-4"></div>
      <div class="col-8">
        <button class="btn btn-major w-100" type="submit">送出</button>
      </div>
    </div>
  </div>
</form>