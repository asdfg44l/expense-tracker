<div class="row justify-content-center mb-5">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header text-center">
                <h3>{{ config.title }}</h3>
            </div>
            <div class="card-body">
                {{> message}}
                <div class="text-right">
                    <small class="text-danger">* 為必填欄位</small>
                </div>
                <form action="{{ config.action }}" method="POST" class="needs-validation load" novalidate>
                    <div class="form-group">
                        <label for="name">支出名稱<span class="text-danger">*</span></label>
                        <input class="form-control custom-input" type="text" name="name" placeholder="請輸入支出名稱"
                            value="{{ record.name }}" maxlength="20">
                    </div>
                    <div class="form-group">
                        <label for="date">日期<span class="text-danger">*</span></label>
                        <input class="form-control custom-input" type="date" name="date" id="date"
                            value="{{ record.date }}">
                    </div>
                    <div class="form-group">
                        <label for="category">類別<span class="text-danger"></span></label>
                        <select class="form-control custom-input" name="category" id="category">
                            <option value="">請選擇</option>
                            {{#each category}}
                            <option value="{{ this.name }}" {{#isEqual ../record.category
                                this.name}}selected{{/isEqual}}>
                                {{ this.title }}
                            </option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="amount">金額<span class="text-danger"></span></label>
                        <input class="form-control custom-input" type="number" name="amount" id="amount" min="0"
                            max="100000000" placeholder="請輸入金額" value="{{ record.amount }}">
                        <small class="form-text text-muted">單筆金額最高1億元</small>
                    </div>
                    <div class="form-group">
                        <label for="merchant">商家<span class="text-danger"></span></label>
                        <input class="form-control custom-input" type="text" class="form-control" id="merchant"
                            name="merchant" placeholder="請輸入商家名稱" value="{{ record.merchant }}" maxlength="20">
                    </div>
                    <button type="submit" class="btn btn-major btn-sm btn-block">送出</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();
</script>